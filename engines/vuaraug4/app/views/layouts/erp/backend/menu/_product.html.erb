                <% end %>
            </a>
        </li>
        <li class="nav-item <%= "active open" if ["erp/products/backend/brands"].include?(params[:controller]) %>">
            <a href="<%= erp_products.backend_brands_path %>" class="nav-link ">
                <span class="title">Thương hiệu</span>
                <% if ["erp/products/backend/brands"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
            </a>
        </li>
        <li class="nav-item <%= "active open" if ["erp/products/backend/property_groups"].include?(params[:controller]) %>">
            <a href="<%= erp_products.backend_property_groups_path %>" class="nav-link ">
                <span class="title">Nhóm thuộc tính</span>
                <% if ["erp/products/backend/property_groups"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
            </a>
        </li>
