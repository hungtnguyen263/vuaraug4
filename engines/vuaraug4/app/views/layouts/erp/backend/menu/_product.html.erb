<% if (can? :read, Erp::Products::Product) %>
<li class="nav-item  <%= "active open" if ["erp/products/backend/products",
                                            "erp/products/backend/categories",
                                            "erp/products/backend/brands",
                                            "erp/menus/backend/menus"
                                        ].include?(params[:controller]) %>">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="fa fa-database"></i>
        <span class="title">Sản phẩm</span>
        <% if ["erp/products/backend/products",
                "erp/products/backend/categories",
                "erp/products/backend/brands",
                "erp/menus/backend/menus"
            ].include?(params[:controller]) %>
            <span class="selected"></span>
            <span class="arrow open"></span>
        <% else %>
            <span class="arrow"></span>
        <% end %>
    </a>
    <ul class="sub-menu">
        <li class="nav-item <%= "active open" if ["erp/products/backend/products"].include?(params[:controller]) %>">
            <a href="<%= erp_products.backend_products_path %>" class="nav-link ">
                <span class="title">D.sách sản phẩm</span>
                <% if ["erp/products/backend/products"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
            </a>
        </li>
        <li class="nav-item <%= "active open" if ["erp/products/backend/categories"].include?(params[:controller]) %>">
            <a href="<%= erp_products.backend_categories_path %>" class="nav-link ">
