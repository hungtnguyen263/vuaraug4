            <a href="<%= erp_products.backend_properties_path %>" class="nav-link ">
                <span class="title">D.sách thuộc tính</span>
                <% if ["erp/products/backend/properties"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
            </a>
        </li>
        <li class="nav-item <%= "active open" if ["erp/products/backend/properties_values"].include?(params[:controller]) %>">
            <a href="<%= erp_products.backend_properties_values_path %>" class="nav-link ">
                <span class="title">Giá trị thuộc tính</span>
                <% if ["erp/products/backend/properties_values"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
            </a>
        </li>
        <li class="nav-item <%= "active open" if ["erp/menus/backend/menus"].include?(params[:controller]) %>">
            <a href="<%= erp_menus.backend_menus_path %>" class="nav-link ">
                <span class="title">Menu sản phẩm</span>
                <% if ["erp/menus/backend/menus"].include?(params[:controller]) %>
                <span class="selected"></span>
                <% end %>
            </a>
        </li>
    </ul>
</li>
<% end %>