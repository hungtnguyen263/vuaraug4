<% content_for :title do %>
    <%= t('.contact_groups') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-users"></i> <%= t('.contact_groups') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_contacts.new_backend_contact_group_path,
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_contacts.list_backend_contact_groups_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_contacts_contact_groups.name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
            url: erp_contacts.archive_all_backend_contact_groups_path,
            data_method: 'PUT',
            data_confirm: t('.archive_confirm')
        },
        {
            text: '<i class="fa fa-eye"></i> '+t('unarchive'),
            url: erp_contacts.unarchive_all_backend_contact_groups_path,
            data_method: 'PUT',
            data_confirm: t('.unarchive_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_contacts.delete_all_backend_contact_groups_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.contact_group_archived'), name: 'show_archived', value: true, checked: false
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.discount'), name: 'discount', value: true, checked: true
        },
        {
            text: t('.discount_type'), name: 'discount_type', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_contacts_contact_groups.created_at', sort_direction: 'desc' }
) %>    